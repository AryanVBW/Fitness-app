<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitnessTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fitness_primary</item>
        <item name="colorPrimaryVariant">@color/fitness_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fitness_accent</item>
        <item name="colorSecondaryVariant">@color/fitness_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/fitness_primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.FitnessTracker.CardView</item>
    </style>

    <style name="Widget.FitnessTracker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.FitnessTracker">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/fitness_primary</item>
        <item name="android:navigationBarColor">@color/fitness_primary</item>
    </style>
</resources> 