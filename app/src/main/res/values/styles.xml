<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Component-specific styles -->
    <style name="TextAppearance.FitnessTracker.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.FitnessTracker.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.FitnessTracker.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.FitnessTracker.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.FitnessTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.FitnessTracker.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Calendar styles -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CalendarWeekTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Card styles -->
    <style name="WorkoutCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>

    <style name="DietCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>

    <!-- Text styles -->
    <style name="HeaderTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SubHeaderTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Profile styles -->
    <style name="Widget.FitnessTracker.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface_dark</item>
        <item name="boxStrokeColor">@color/fitness_primary</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <style name="Widget.FitnessTracker.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <!-- Library styles -->
    <style name="Widget.FitnessTracker.Library.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Widget.FitnessTracker.Library.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Webapp styles -->
    <style name="WebappSplashScreenTextTheme" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
