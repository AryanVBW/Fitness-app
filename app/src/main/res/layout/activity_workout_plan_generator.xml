<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitness_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Plan Generator" />

        <androidx.cardview.widget.CardView
            style="@style/WorkoutCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fitness Goal"
                    android:textColor="@color/fitness_text_secondary"
                    android:textSize="@dimen/text_size_medium" />

                <RadioGroup
                    android:id="@+id/fitness_goal_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/goal_weight_loss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight Loss"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/goal_muscle_gain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Muscle Gain"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/goal_general_fitness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="General Fitness"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/goal_endurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Improve Endurance"
                        android:textColor="@color/fitness_text_primary" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Experience Level"
                    android:textColor="@color/fitness_text_secondary"
                    android:textSize="@dimen/text_size_medium" />

                <RadioGroup
                    android:id="@+id/experience_level_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/level_beginner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/level_intermediate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Intermediate"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/level_advanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Advanced"
                        android:textColor="@color/fitness_text_primary" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Workouts Per Week"
                    android:textColor="@color/fitness_text_secondary"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <SeekBar
                        android:id="@+id/workouts_per_week_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="6"
                        android:progress="3"
                        android:progressDrawable="@drawable/progress_bar_gradient"
                        android:thumbTint="@color/fitness_primary" />

                    <TextView
                        android:id="@+id/workouts_per_week_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="3 days"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Workout Duration"
                    android:textColor="@color/fitness_text_secondary"
                    android:textSize="@dimen/text_size_medium" />

                <RadioGroup
                    android:id="@+id/workout_duration_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/duration_short"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30 min"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/duration_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="45 min"
                        android:textColor="@color/fitness_text_primary" />

                    <RadioButton
                        android:id="@+id/duration_long"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60 min"
                        android:textColor="@color/fitness_text_primary" />
                </RadioGroup>

                <Button
                    android:id="@+id/generate_workout_plan_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/margin_large"
                    android:background="@drawable/button_gradient_primary"
                    android:stateListAnimator="@drawable/button_state_animator"
                    android:text="Generate Plan"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Generated Plan Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/generated_plan_card"
            style="@style/WorkoutCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    style="@style/SubHeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Personalized Plan" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/workout_plan_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layoutAnimation="@anim/layout_animation_from_bottom" />

                <Button
                    android:id="@+id/save_workout_plan_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/margin_large"
                    android:background="@drawable/button_gradient_primary"
                    android:stateListAnimator="@drawable/button_state_animator"
                    android:text="Save Plan"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
