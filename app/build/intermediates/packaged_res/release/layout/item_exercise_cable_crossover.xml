<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#333333"
    app:strokeColor="#E91E63"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. CABLE CROSSOVER"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cable_crossover"
            android:contentDescription="Cable Crossover"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cable crossovers isolate the chest muscles and provide constant tension. Stand between two cable machines with handles attached at shoulder height or above. Grab the handles, step forward, and bring your hands together in front of your body in an arc motion."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETS:"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPS:"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-15"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REST:"
                android:textColor="#E91E63"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 sec"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/trackCableCrossoverButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRACK SET"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:backgroundTint="#3A7BD5"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
